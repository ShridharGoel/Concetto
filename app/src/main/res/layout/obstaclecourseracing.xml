<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@color/bagcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="90"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/hl">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bagcolor"



            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/obsta"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="150dp"

                    android:text="OBSTACLE RACING"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <Button
                android:id="@+id/bt1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/btn_shape"

                android:padding="10dp"
                android:text="ABOUT"
                android:textColor="#ffffff" />

            <Button  android:id="@+id/bt2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="JUDGING"
                android:textColor="#ffffff"
                android:background="@drawable/btn_shape"/>
            <Button
                android:id="@+id/bt6"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="RULES"
                android:textColor="#ffffff"
                android:background="@drawable/btn_shape"
                />

            <Button
                android:id="@+id/bt3"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="PRIZES"
                android:textColor="#ffffff"

                android:background="@drawable/btn_shape"/>

            <Button
                android:id="@+id/bt4"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text=" BOT SPECIFICATIONS"
                android:textColor="#ffffff"

                android:background="@drawable/btn_shape"
                />
            <Button
                android:id="@+id/bt7"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text=" ARENA"
                android:textColor="#ffffff"


                android:background="@drawable/btn_shape"
                />










        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <Button
        android:id="@+id/bt5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="10"
        android:background="@color/regcolor"
        android:gravity="center"
        android:padding="10dp"
        android:text="REGISTRATION"
        android:textColor="#ffffff"
        app:layout_anchor="@+id/hl"
        app:layout_anchorGravity="bottom"

        tools:layout_editor_absoluteX="176dp" />

</LinearLayout>